---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

type Props = CollectionEntry<"resume">["data"];

const { title, description, heroVideo } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style lang="scss">
      .resume-page {
        width: calc(100% - 2em);
        max-width: 720px;
        padding-top: 60px;
        &__prose {
          max-width: calc(100% - 1em);
          margin: auto;
          padding: 0 1em;
          color: rgb(var(--gray-dark));
        }
        &__title {
          text-align: center;
          line-height: 1;
          margin: 0;
          padding: 0;
          p {
            line-height: 1.5;
            margin-bottom: 0.5em;
          }
          h1 {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: center;
            gap: 12px;
          }
        }
        &__last-updated {
          font-style: italic;
        }
        &__hero-video {
          width: 100%;
          margin-top: 2em;
          video {
            display: block;
            margin: 0 auto;
            border-radius: 12px;
            box-shadow: var(--box-shadow);
          }
        }
        &__button {
          align-items: center;
          appearance: none;
          color: rgb(var(--gray-dark));
          border-style: none;
          cursor: pointer;
          font-size: 16px;
          font-weight: 600;
          padding: 12px 20px;
          border-radius: 12px;
          display: inline-flex;
          justify-content: center;
          line-height: normal;
          overflow: visible;
          position: relative;
          text-align: center;
          text-transform: none;
          text-decoration: none;
          transition:
            opacity 15ms linear 30ms,
            transform 270ms cubic-bezier(0, 0, 0.2, 1) 0ms;
          outline: none;

          &:hover {
            background-color: #fff;
            box-shadow:
              rgba(0, 0, 0, 0.2) 0 3px 5px -1px,
              rgba(0, 0, 0, 0.14) 0 6px 10px 0,
              rgba(0, 0, 0, 0.12) 0 1px 18px 0;
            transform: scale(1.05);
            transition: 0.3s all cubic-bezier(0.075, 0.82, 0.165, 1);
          }
          &:active {
            box-shadow:
              0 4px 4px 0 rgb(60 64 67 / 30%),
              0 8px 12px 6px rgb(60 64 67 / 15%);
            transform: scale(0.95);
            outline: none;
            transition: 0.3s all cubic-bezier(0.075, 0.82, 0.165, 1);
          }
          &:focus {
            outline: none;
          }
        }
        &__download {
          height: 44px;
          width: 44px;
          padding: 0;
          border-radius: 50%;
          img {
            z-index: -1;
          }
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <main class="resume-page">
      <article>
        <div class="resume-page__prose">
          <div class="resume-page__title">
            <h1>
              {title}
              <a
                class="resume-page__button resume-page__download"
                href="CorinneKellyResume.pdf"
                download="CorinneKellyResume"
              >
                <img src="download-icon.webp" height="30" width="30" /></a
              >
            </h1>
            <p>
              <a class="resume-page__button" href="#education">Education</a><a
                class="resume-page__button"
                href="#employment">Employment</a
              ><a class="resume-page__button" href="#skills">Skills</a>
            </p>

            <p>
              Software Engineering Manager with over 8 years of experience in
              leading frontend and backend development, specializing in Vue.js,
              React Native, and Python. Demonstrates exceptional skills in CI/CD
              automation, user experience enhancement, and team mentorship,
              driving efficient deployment processes and high-quality code
              standards. Committed to fostering innovation and collaboration in
              cross-functional teams while spearheading technical architecture
              improvements and strategic hiring initiatives.
            </p>

            <div class="resume-page__hero-video">
              {
                heroVideo && (
                  <video width="960" height="540" autoplay loop>
                    <source src={heroVideo} type="video/mp4" />
                  </video>
                )
              }
            </div>
          </div>
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
